@model OnlineTutor.Models.ViewModels.TestViewModel

@{
    ViewData["Title"] = "Редактирование теста";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>Редактирование теста</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Subject" class="form-label"></label>
                            <input asp-for="Subject" class="form-control" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Topic" class="form-label"></label>
                            <input asp-for="Topic" class="form-control" />
                            <span asp-validation-for="Topic" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Instructions" class="form-label"></label>
                            <textarea asp-for="Instructions" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Instructions" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="TimeLimit" class="form-label"></label>
                                <input asp-for="TimeLimit" class="form-control" type="number" min="1" />
                                <span asp-validation-for="TimeLimit" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="PassingScore" class="form-label"></label>
                                <input asp-for="PassingScore" class="form-control" type="number" min="0" max="100" />
                                <span asp-validation-for="PassingScore" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="IsPublished" class="form-check-input" />
                            <label asp-for="IsPublished" class="form-check-label"></label>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">Отмена</a>
                            <button type="submit" class="btn btn-primary">Сохранить изменения</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Questions" asp-route-id="@Model.Id" class="btn btn-info">
                            <i class="fas fa-list"></i> Управление вопросами
                        </a>
                        <a asp-action="Assign" asp-route-id="@Model.Id" class="btn btn-success">
                            <i class="fas fa-user-plus"></i> Назначить тест
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
