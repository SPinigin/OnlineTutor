@model OnlineTutor.Models.ViewModels.StudentDetailsViewModel

@{
    ViewData["Title"] = "Удаление ученика";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4>Удаление ученика</h4>
                </div>
                <div class="card-body">
                    <h5>Вы действительно хотите удалить этого ученика?</h5>

                    <div class="alert alert-warning mt-3">
                        <p><strong>Внимание!</strong> Это действие нельзя будет отменить. Все данные ученика будут удалены из системы.</p>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-4 text-center mb-4">
                            <div class="avatar-circle">
                                <span class="initials">@Model.FullName.Split(' ').Take(2).Select(n => n[0]).Aggregate("", (c, n) => c + n)</span>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <h3>@Model.FullName</h3>
                            <p class="text-muted">@Model.Email</p>

                            <dl class="row mt-4">
                                <dt class="col-sm-4">Класс:</dt>
                                <dd class="col-sm-8">@Model.Grade</dd>

                                <dt class="col-sm-4">Учебная группа:</dt>
                                <dd class="col-sm-8">@Model.ClassName</dd>

                                <dt class="col-sm-4">Дата рождения:</dt>
                                <dd class="col-sm-8">@Model.DateOfBirth.ToString("dd.MM.yyyy")</dd>

                                <dt class="col-sm-4">Возраст:</dt>
                                <dd class="col-sm-8">@Model.Age лет</dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">Отмена</a>
                            <button type="submit" class="btn btn-danger">Удалить</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
