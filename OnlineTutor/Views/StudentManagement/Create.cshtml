@model OnlineTutor.Models.ViewModels.CreateStudentViewModel

@{
    ViewData["Title"] = "Добавление ученика";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>Добавление нового ученика</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <h5 class="mb-3">Основная информация</h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label"></label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label"></label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MiddleName" class="form-label"></label>
                            <input asp-for="MiddleName" class="form-control" />
                            <span asp-validation-for="MiddleName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Password" class="form-control" id="password" />
                                <button type="button" class="btn btn-outline-secondary" id="generatePassword">
                                    <i class="fas fa-sync-alt"></i> Сгенерировать
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <small class="form-text text-muted">Если не указать пароль, он будет сгенерирован автоматически.</small>
                        </div>

                        <h5 class="mb-3 mt-4">Учебная информация</h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Grade" class="form-label"></label>
                                <input asp-for="Grade" class="form-control" placeholder="Например: 10А" />
                                <span asp-validation-for="Grade" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="DateOfBirth" class="form-label"></label>
                                <input asp-for="DateOfBirth" class="form-control" type="date" />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ClassId" class="form-label"></label>
                            <select asp-for="ClassId" class="form-select">
                                <option value="">-- Выберите класс (группу) --</option>
                                @foreach (var classItem in Model.AvailableClasses)
                                {
                                    <option value="@classItem.Id">@classItem.Name (@classItem.Year г.)</option>
                                }
                            </select>
                            <span asp-validation-for="ClassId" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">Отмена</a>
                            <button type="submit" class="btn btn-primary">Добавить ученика</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            // Функция для генерации случайного пароля
            function generatePassword(length) {
                if (!length) {
                    length = 8;
                }
                
                var lowerChars = "abcdefghijklmnopqrstuvwxyz";
                var upperChars = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
                var numbers = "0123456789";
                var specialChars = "!$%^&*";
                
                var allChars = lowerChars + upperChars + numbers + specialChars;
                var password = "";
                
                // Гарантируем наличие заглавной буквы, строчной буквы, цифры и специального символа
                password += upperChars.charAt(Math.floor(Math.random() * upperChars.length));
                password += lowerChars.charAt(Math.floor(Math.random() * lowerChars.length));
                password += numbers.charAt(Math.floor(Math.random() * numbers.length));
                password += specialChars.charAt(Math.floor(Math.random() * specialChars.length));
                
                // Дополняем до нужной длины
                for (var i = 4; i < length; i++) {
                    password += allChars.charAt(Math.floor(Math.random() * allChars.length));
                }
                
                // Перемешиваем символы
                password = password.split('').sort(function() {
                    return 0.5 - Math.random();
                }).join('');
                
                return password;
            }

            // Обработчик кнопки генерации пароля
            $("#generatePassword").click(function() {
                var password = generatePassword(8);
                $("#password").val(password);
            });
        });
    </script>
}
