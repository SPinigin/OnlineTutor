@model OnlineTutor.Models.ViewModels.StudentDetailsViewModel

@{
    ViewData["Title"] = "Детали ученика";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4>Информация об ученике</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center mb-4">
                            <div class="avatar-circle">
                                <span class="initials">@Model.FullName.Split(' ').Take(2).Select(n => n[0]).Aggregate("", (c, n) => c + n)</span>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <h3>@Model.FullName</h3>
                            <p class="text-muted">@Model.Email</p>

                            <dl class="row mt-4">
                                <dt class="col-sm-4">Класс:</dt>
                                <dd class="col-sm-8">@Model.Grade</dd>

                                <dt class="col-sm-4">Учебная группа:</dt>
                                <dd class="col-sm-8">@Model.ClassName</dd>

                                <dt class="col-sm-4">Дата рождения:</dt>
                                <dd class="col-sm-8">@Model.DateOfBirth.ToString("dd.MM.yyyy")</dd>

                                <dt class="col-sm-4">Возраст:</dt>
                                <dd class="col-sm-8">@Model.Age лет</dd>
                            </dl>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">Назад к списку</a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-md-2">Редактировать</a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Удалить</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 120px;
        height: 120px;
        background-color: #3a6ea5;
        text-align: center;
        border-radius: 50%;
        -webkit-border-radius: 50%;
        -moz-border-radius: 50%;
        margin: 0 auto;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .initials {
        font-size: 48px;
        line-height: 1;
        color: #fff;
        font-weight: bold;
        text-transform: uppercase;
    }
</style>
