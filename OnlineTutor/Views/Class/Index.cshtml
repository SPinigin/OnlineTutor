@model IEnumerable<OnlineTutor.Models.Class>

@{
    ViewData["Title"] = "Мои классы";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Мои классы</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Создать новый класс
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <p>У вас пока нет созданных классов. Нажмите кнопку "Создать новый класс", чтобы начать.</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var classItem in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">@classItem.Name</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text"><strong>Учебный год:</strong> @classItem.Year</p>
                            <p class="card-text"><strong>Количество учеников:</strong> @(classItem.Students?.Count ?? 0)</p>
                        </div>
                        <div class="card-footer">
                            <div class="btn-group w-100">
                                <a asp-action="Details" asp-route-id="@classItem.Id" class="btn btn-info">
                                    <i class="fas fa-users"></i> Ученики
                                </a>
                                <a asp-action="Edit" asp-route-id="@classItem.Id" class="btn btn-primary">
                                    <i class="fas fa-edit"></i> Редактировать
                                </a>
                                <a asp-action="Delete" asp-route-id="@classItem.Id" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Удалить
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
